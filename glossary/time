<entry><literal>%j</literal></entry>
<entry>day of the year</entry>
<entry>0-366</entry>
<entry>112</entry>
</row>
<row>
<entry><literal>%m</literal></entry>
<entry>month</entry>
<entry>01-12</entry>
<entry>01</entry>
</row>
<row>
<entry><literal>%B %b</literal></entry>
<entry>month name</entry>
<entry></entry>
<entry>January
Jan</entry>
</row>
<row>
<entry><literal>%d %e</literal></entry>
<entry>day of the month</entry>
<entry>01-31</entry>
<entry>08
8</entry>
</row>
<row>
<entry><literal>%U %W</literal></entry>
<entry>week number, week starts Sunday (%U) or Monday (%W)</entry>
<entry>00-53</entry>
<entry>48
47</entry>
</row>
<row>
<entry><literal>%w %u</literal></entry>
<entry>weekday</entry>
<entry>0-6</entry>
<entry>03 3</entry>
</row>
<row>
<entry><literal>%A %a</literal></entry>
<entry>weekday name</entry>
<entry></entry>
<entry>Sunday
Sun</entry>
</row>
