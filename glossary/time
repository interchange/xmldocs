<entry><literal>%x</literal></entry>
<entry>date</entry>
<entry></entry>
<entry>01/18/2004</entry>
</row>
<row>
<entry><literal>%X</literal></entry>
<entry>time</entry>
<entry></entry>
<entry>14:17:46</entry>
</row>
